@model DateTime?

@{
    var dt = Empower.Common.Constant.UI.DateTime.DateFormat;
    var datePickerBuilder = Html.Kendo().DatePickerFor(m => m)
        .Value(Model == DateTime.MinValue ? null : Model)
        .Format(dt)
        .ParseFormats(new string[] { "yyyy-MM-ddThh:mm:ss", "MM/dd/yyyy hh:mm:ss tt" })
        .HtmlAttributes(new { type = "text" });
    if (ViewData["disabled"] != null)
    {
        datePickerBuilder = datePickerBuilder.Enable(false);
    }
    if (ViewData["change"] != null)
    {
        datePickerBuilder = datePickerBuilder.Events(events => events.Change((string)ViewData["change"]));
    }
    if (ViewData["default"] != null)
    {
        datePickerBuilder = datePickerBuilder.Value((DateTime?)ViewData["default"]);
    }
    if (ViewData["data_val_required"] != null)
    {
        datePickerBuilder = datePickerBuilder.HtmlAttributes(new { data_val_required = ViewData["data_val_required"] });
    }
    if (ViewData["control_level_permission"] != null)
    {
        datePickerBuilder = datePickerBuilder.HtmlAttributes(new { @class = "control-level-permission" });
    }
    if (ViewData["class"] != null && ViewData["class"].ToString().Contains("control-level-permission"))
    {
        datePickerBuilder = datePickerBuilder.HtmlAttributes(new { @class = "control-level-permission" });
    }
    if (ViewData["min_date"] != null)
    {
        datePickerBuilder = datePickerBuilder.Min((DateTime)ViewData["min_date"]);
    }
    else
    {
        datePickerBuilder = datePickerBuilder.Min(new DateTime(1900, 1, 1));
    }
}

@datePickerBuilder

<script>
    $(function () {
        $('[id=@Html.IdFor(m => m)]').kendoMaskedTextBox({
            mask: "00/00/bc00",
            rules: {
                'b': /[12]/,
                'c':
                    function (x) {
                        var dp = $('[id=@Html.IdFor(m => m)]').data('kendoMaskedTextBox');

                        if (!dp.value()) return true;

                        var maskedVal = dp.value();
                        var century = maskedVal.substr(6, 1);

                        if (century == 1) {
                            return x == 9;
                        } else {
                            return $.isNumeric(x);
                        }
                    }
            },
        });
        /*Removes the class added to the input by the Kendo Mask*/
        $('[id=@Html.IdFor(m => m)]').removeClass('k-textbox').removeAttr('data-val-date');
    });
</script>