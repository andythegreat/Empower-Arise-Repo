@{
    var attrs = new Dictionary<string, object>();
    /*attrs.Add("placeholder", ViewData.ModelMetadata.GetDisplayName());*/
    attrs.Add("type", "tel");

    var classes = string.Empty;

    if (ViewData["class"] != null)
    {
        classes += ((string)ViewData["class"]).Replace("form-control", "");
    }

    //TODO: FIX THIS!!! Check to make sure the FormData["id"] is the same as the old
    //      FormContext.FormId property
    if (ViewContext.FormContext.HasFormData && ViewContext.FormContext.FormData["id"].ToString().ToLower().Contains("grid"))
    {
        classes += "k-widget form-control";
    }

    attrs.Add("class", classes);

    if (ViewData["disabled"] != null)
    {
        attrs.Add("disabled", "disabled");
    }
}
@Html.Kendo().MaskedTextBoxFor(m => m).HtmlAttributes(attrs)

<script type="text/javascript">
    $(function () {
        var maskedTextBox = $('[id=@Html.IdFor(m => m)]').data('kendoMaskedTextBox');
        maskedTextBox.setOptions({
            mask: '(b00) 000-0000',
            rules: {
                'b': /^[1-9]/
            }
        });
    });
</script>