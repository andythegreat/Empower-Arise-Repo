<nav class="navbar navbar-default left-nav-bar" role="navigation">
    <div id="left-menu-nav" class="">
        <ul class="list-group">
            @foreach (var root in treeViewItems)
            {
                <li class="list-group-item">
                    <span>@root.Text</span>
                    <ul class="list-group">
                        @foreach (var sub in root.Items)
                        {
                            @Html.ActionLink(sub.Text, sub.Action, sub.Controller, new { area = sub.Area }, new { id = sub.ClientID, @class = "list-group-item" });
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
